<Layout>
  <div class="menu-icon" id="menuButton">
    <div class="bar"></div>
    <div class="bar"></div>
    <div class="bar"></div>
  </div>

  <nav id="nav-menu" class="side-menu hidden">
    <ul>
      <li><a href="#about">About</a></li>
